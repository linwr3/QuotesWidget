<Window x:Class="QuotesWidget.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="340" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <GroupBox Header="文本源配置">
            <StackPanel Margin="5">
                <Button Content="选择文本文件 (.txt)" Click="BtnSelectFile_Click" Margin="0,5"/>
                <TextBlock x:Name="TxtFilePath" Text="未选择文件" Foreground="Gray" TextWrapping="Wrap"/>

                <DockPanel Margin="0,10">
                    <TextBlock Text="分隔符:" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtSeparator" Text="%" Width="50" Margin="10,0" HorizontalAlignment="Left"/>
                    <TextBlock Text="(例如: % 或 ###)" VerticalAlignment="Center" Foreground="Gray"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="播放设置" Margin="0,10">
            <StackPanel Margin="5">
                <DockPanel>
                    <TextBlock Text="轮换周期(秒): "/>
                    <TextBox x:Name="TxtInterval" Text="60" Width="60"/>
                    <TextBlock Text=" (10 - 1800)" Foreground="Gray" Margin="5,0"/>
                </DockPanel>
                <CheckBox x:Name="ChkAutoStart" Content="开机自启动" Margin="0,10" Click="ChkAutoStart_Click"/>
            </StackPanel>
        </GroupBox>

        <Button Content="保存并应用" Height="30" Click="BtnSave_Click"/>
    </StackPanel>
</Window>